
{% extends 'admin/article/base.html.twig' %}

{% block title %} Articles {%  endblock title %}

{% block body  %}

{# Je fait ma boucle for pour selectionner mes articles a afficher sur mon navigateur, puis la focntion path qui vat faire
le lien entre ma page twig et le name de ma fonction, un lien unique qui pourras etre utilisé par n'importe qui #}

    <body>
        <hr>
        {% for message in app.flashes('success')  %}
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Féliciation</h4>
                <p>{{ message }}</p>
            </div>
        {% endfor%}

    {% for article in articles %}
        <h2>
            <h1 class="ville"> {{ article.title }}</h1>
        </h2>

        <div class="row d-flex justify-content-between">
            <button type="button" class="btn btn-outline-warning"><a href="{{ path('admin_article_insert',{id:article.id}) }}">Créer un article</a></button>
            <button type="button" class="btn btn-outline-warning"><a href="{{ path('admin_article_update',{id:article.id}) }}">Modifier l'article </a></button>
            <button type="button" class="btn btn-outline-danger"><a href="{{ path('admin_article_delete',{id:article.id}) }}">Supprimer l'article</a></button>
        </div><br>
        <div class="row">
            <img src="{{ article.picture }}" alt="" class="img-fluid"> <br> <br>
        </div>
    </body>
    {% endfor %}

{% endblock body %}